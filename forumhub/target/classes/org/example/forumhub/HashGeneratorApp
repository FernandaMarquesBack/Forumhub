package org.example.forumhub;

import org.springframework.boot.CommandLineRunner;
import org.springframework.boot.SpringApplication;
import org.springframework.boot.autoconfigure.SpringBootApplication;
import org.springframework.context.annotation.Bean;
import org.springframework.context.annotation.Profile;
import org.springframework.security.crypto.bcrypt.BCryptPasswordEncoder;

@SpringBootApplication
@Profile("hash")
public class HashGeneratorApp {

    public static void main(String[] args) {
        SpringApplication.run(HashGeneratorApp.class, args);
    }

    @Bean
    public BCryptPasswordEncoder passwordEncoder() {
        return new BCryptPasswordEncoder();
    }

    @Bean
    public CommandLineRunner run(BCryptPasswordEncoder encoder) {
        return args -> {
            if (args.length != 1) {
                System.err.println("Uso: java -jar yourapp.jar <senha>");
                System.exit(1);
            }
            System.out.println("=================================");
            System.out.println("Senha criptografada: " + encoder.encode(args[0]));
            System.out.println("=================================");
            System.exit(0);
        };
    }
}
